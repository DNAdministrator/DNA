@model DNA3.Models.Password
@{
    Layout = "_Dashboard";
    string Title = "Password";
}

@section CSS {

}

@section Scripts {
    <script src="~/common/plugins/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/common/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $('#Proposed').focus();
    </script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@Title Detail</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@Title Detail</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
		<div class="container-fluid">
			<partial name="_Messages" />
			<div class="row">
				<!-- left column -->
				<div class="col-md-4">
					<!-- general form elements -->
					<div class="card card-primary">
						<div class="card-header">
							<h3 class="card-title">@Title</h3>
							<div class="card-tools">
								<button asp-action="Update" form="Master" class="btn btn-tool btn-sm">
									<i class="far fa-floppy-disk" title="Update"></i>
								</button>
								<a asp-action="Edit" asp-route-id="@Model.LoginId" class=" btn btn-tool btn-sm">
									<i class="fas fa-xmark" title="Close"></i>
								</a>
							</div>
						</div>
						<!-- /.card-header -->
						<!-- form start -->
						<form asp-action="#" id="Master" autocomplete="off">
							<div class="card-body">
								<div class="row mb-0">
									<div class="col-12">
										<p class="small">@Html.Render(Utilities.Security.ValidPasswordRules())</p>
									</div>
								</div>
								<div class="row mb-0">
									<div class="col-12">
										<div class="form-group">
											<label asp-for="Proposed">@Html.DisplayNameFor(x => x.Proposed)</label>
											<input asp-for="Proposed" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Proposed)" autocomplete="off" data-lpignore="true" new-password="true">
											<span asp-validation-for="Proposed" class="text-danger small"></span>
										</div>
									</div>
								</div>
								<div class="row mb-0">
									<div class="col-12">
										<div class="form-group">
											<label asp-for="Confirmed">@Html.DisplayNameFor(x => x.Confirmed)</label>
											<input asp-for="Confirmed" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Confirmed)" autocomplete="off" data-lpignore="true" new-password="true">
											<span asp-validation-for="Confirmed" class="text-danger small"></span>
										</div>
									</div>
								</div>
								<div class="row mb-0">
									<div class="col-12">
										<p class="small">Passwords are stored as a one-way hash and once set, can be reset but not retrieved.</p>
									</div>
								</div>
							</div>
							<input asp-for="LoginId" type="hidden" />
							<!-- /.card-body -->
						</form>
					</div>
					<!-- /.card -->
				</div>
				<!-- / Left Column -->
			</div>
			<!-- / Row -->
		</div>
        <!-- Container Fluid -->
    </section>
</div>
<!-- / Content Wrapper -->
