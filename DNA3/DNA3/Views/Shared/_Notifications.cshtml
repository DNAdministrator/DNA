<span class="dropdown-item dropdown-header">@ViewData["Count"] Notifications</span>
<div class="dropdown-divider"></div>
@foreach (var item in ViewBag.Notifications) {
	<a href="#" class="dropdown-item">
		<i class="fas fa-envelope mr-2"></i> @Html.Render((string)item.Message)
		<span class="float-right text-muted text-sm">@(item.TimeStamp.ToString("hh:mm tt"))</span>
	</a>
}
<div class="dropdown-divider"></div>
<a href="/Activity" class="dropdown-item dropdown-footer">See All Notifications</a>