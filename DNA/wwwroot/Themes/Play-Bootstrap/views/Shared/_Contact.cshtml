@model Request
@{
	Page ContactPage = (Page)ViewBag.ContactPage;
}
<!-- ====== Contact Start ====== -->
<section id="contact" class="ud-contact">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-xl-8 col-lg-7">
				<div class="ud-contact-content-wrapper">
					<div class="ud-contact-title">
						<span>CONTACT US</span>
						<h2 class="mb-3">
							@Html.Render(ContactPage.Subject)
							<vc:edit-icon controller="Page" action="Edit" id="@ContactPage.PageId" css="text-primary" title="Edit This Page"></vc:edit-icon>
						</h2>
						<p class="mb-3">
							@Html.Render(ContactPage.Content)
						</p>
					</div>
					<div class="ud-contact-info-wrapper">
						<div class="ud-single-info">
							<div class="ud-info-icon">
								<i class="lni lni-map-marker"></i>
							</div>
							<div class="ud-info-meta">
								<h5>Our Location</h5>
								<p>@Configuration["Application:Address"], @Configuration["Application:City"], USA</p>
							</div>
						</div>
						<div class="ud-single-info">
							<div class="ud-info-icon">
								<i class="lni lni-envelope"></i>
							</div>
							<div class="ud-info-meta">
								<h5>How Can We Help?</h5>
								<p>@Configuration["Application:URL"]</p>
								<p>@Configuration["Application:SalesAddress"]</p>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-xl-4 col-lg-5">
				<vc:alerts></vc:alerts>
				<div class="ud-contact-form-wrapper wow fadeInUp" data-wow-delay=".2s">
					<h3 class="ud-contact-form-title">Send us a Message</h3>
					<form asp-action="#" class="ud-contact-form" autocomplete="off" spellcheck="false">
						<div class="ud-form-group">
							<label asp-for="First">
								@Html.DisplayNameFor(x => x.First)
								<span asp-validation-for="First" class="text-danger text-xs"></span>
							</label>
							<input asp-for="First" placeholder="@Html.DisplayNameFor(x => x.First)" />
						</div>
						<div class="ud-form-group">
							<label asp-for="Last">
								@Html.DisplayNameFor(x => x.Last)
								<span asp-validation-for="Last" class="text-danger small"></span>
							</label>
							<input asp-for="Last" placeholder="@Html.DisplayNameFor(x => x.Last)" />
						</div>
						<div class="ud-form-group">
							<label asp-for="Email">
								@Html.DisplayNameFor(x => x.Email)
								<span asp-validation-for="Email" class="text-danger small"></span>
							</label>
							<input asp-for="Email" placeholder="@Html.DisplayNameFor(x => x.Email)" />
						</div>
						<div class="ud-form-group">
							<label asp-for="Content">
								@Html.DisplayNameFor(x => x.Content)
								<span asp-validation-for="Content" class="text-danger small"></span>
							</label>
							<input asp-for="Content" placeholder="@Html.DisplayNameFor(x => x.Content)" />
						</div>
						<div class="ud-form-group mb-0">
							<button asp-action="Contact" class="ud-main-btn">Send Message</button>
						</div>
						<input asp-for="Subject" type="hidden" value="Contact Request" />
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- ====== Contact End ====== -->
